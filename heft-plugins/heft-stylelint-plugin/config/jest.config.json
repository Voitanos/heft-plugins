{
  "testMatch": ["<rootDir>/src/**/*.test.ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": {
          "module": "esnext",
          "moduleResolution": "bundler"
        }
      }
    ]
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/__mocks__/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  }
}
